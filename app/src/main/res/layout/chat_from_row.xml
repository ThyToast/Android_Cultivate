<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/textView_from_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/chatbox_from"
        android:maxWidth="280dp"
        android:padding="16dp"
        android:text="This is my message to test the wrapping but at this point its a test"
        app:layout_constraintStart_toEndOf="@+id/imageView_chat_from"
        app:layout_constraintTop_toTopOf="@+id/imageView_chat_from" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_chat_from"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/entrepreneurship3" />

</androidx.constraintlayout.widget.ConstraintLayout>